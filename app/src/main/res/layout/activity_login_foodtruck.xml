<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="grupo1.sw2.ulima.foodtracker.LoginFoodtruckActivity"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#00FFAA"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/iviLogoPrincipalFtc"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/logo"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/eteUserWrapperLoginFtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/eteFtcLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ftc_bckgr_editText"
            android:ems="15"
            android:hint="Nombre"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etePasswordWrapperLoginFtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etePassFtcLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/ftc_bckgr_editText"
            android:ems="15"
            android:hint="Contraseña"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/butLoginFtc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="40dp"
        android:text="Iniciar sesión"
        android:textColor="@color/ftc_bckgr_editText"
        android:textSize="20sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorError="@color/red_error"
        custom:pb_colorNormal="@color/ftc_background"
        custom:pb_colorPressed="@color/blue_pressed"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="¡Listo!"
        custom:pb_textError="Error"
        custom:pb_textProgress="Iniciando" />

    <com.rey.material.widget.TextView
        android:id="@+id/tviRegistraMiFtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registra tu foodtruck"
        android:textSize="14sp"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <com.rey.material.widget.TextView
        android:id="@+id/tviNoFtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_soy_foodtruck"
        android:textSize="14sp"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

</LinearLayout>
