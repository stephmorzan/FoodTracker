        android:layout_width="wrap_content"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:ems="15"
        android:id="@+id/eteCorreo"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Usuario"
        android:ems="15"
        android:id="@+id/eteUser"/>

    <EditText
        android:layout_width="wrap_content"
