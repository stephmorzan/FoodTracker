<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user_registro"
    tools:context=".UserRegistroActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/ftc_background"
    android:weightSum="1">

    <ImageView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/iviLogo"
        android:src="@mipmap/logo2"
        android:layout_weight="0.16" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Nombre"
        android:ems="15"
        android:background="@color/ftc_bckgr_editText"
        android:layout_marginTop="30dp"
        android:id="@+id/eteNombre"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:ems="15"
        android:layout_marginTop="20dp"
        android:background="@color/ftc_bckgr_editText"
        android:id="@+id/eteCorreo" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Usuario"
        android:ems="15"
        android:layout_marginTop="20dp"
        android:background="@color/ftc_bckgr_editText"
        android:id="@+id/eteUser"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:ems="15"
        android:background="@color/ftc_bckgr_editText"
        android:layout_marginTop="20dp"
        android:id="@+id/etePassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:id="@+id/butRegistrar"
        android:layout_marginTop="40dp"
        android:background="@color/ftc_background"
        android:textColor="@color/ftc_bckgr_editText"/>


</LinearLayout>
