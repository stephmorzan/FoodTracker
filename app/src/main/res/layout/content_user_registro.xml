<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_user_registro"
    tools:context=".UserRegistroActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/ftc_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/iviLogo"
        android:src="@mipmap/logo2"/>

    <com.rey.material.widget.EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:ems="18"
        android:inputType="text"
        android:background="@color/ftc_bckgr_editText"
        android:layout_marginTop="35dp"
        android:id="@+id/eteNombre"/>

    <com.rey.material.widget.EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:ems="18"
        android:layout_marginTop="25dp"
        android:background="@color/ftc_bckgr_editText"
        android:id="@+id/eteCorreo"/>


    <com.rey.material.widget.EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        android:ems="18"
        android:layout_marginTop="25dp"
        android:background="@color/ftc_bckgr_editText"
        android:id="@+id/eteUser"/>


    <com.rey.material.widget.EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:ems="18"
        android:background="@color/ftc_bckgr_editText"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/etePassword"/>


    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/butRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Crear"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorNormal="@color/ftc_background"
        custom:pb_colorPressed="@color/blue_pressed"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="¡Listo!"
        custom:pb_textProgress="Registrando"
        custom:pb_textError="Error"
        custom:pb_colorError="@color/red_error"/>


</LinearLayout>
