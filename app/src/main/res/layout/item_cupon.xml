<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ciriviCupon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/logo"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/llaQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ciriviCupon"
        android:layout_alignTop="@id/ciriviCupon"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true">

        <com.rey.material.widget.TextView
            android:id="@+id/tviExpiracion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quedan 30 promociones"
            android:textSize="14dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llaRankingDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/ciriviCupon"
        android:layout_alignTop="@id/ciriviCupon"
        android:layout_toRightOf="@id/ciriviCupon"
        android:layout_toLeftOf="@id/llaQr"
        android:layout_centerVertical="true">

        <com.rey.material.widget.TextView
            android:id="@+id/tviCuponDscto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20dp"
            android:textColor="@color/ftc_background"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <com.rey.material.widget.TextView
            android:id="@+id/tviCuponNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"/>

        <com.rey.material.widget.TextView
            android:id="@+id/tviCuponProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="En esas cosas"/>

    </LinearLayout>

</RelativeLayout>
